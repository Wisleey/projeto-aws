generator client {
  provider = "prisma-client-js"
   binaryTargets = ["native", "debian-openssl-3.0.x"]  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  nome     String
  email    String   @unique
  senha    String
  createdAt DateTime @default(now())
  passeios  Passeio[]
}

model Passeio {
  id          String   @id @default(uuid())
  titulo      String
  descricao   String
  preco       Float
  data        DateTime
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}

